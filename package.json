{
  "name": "remarkdown.css",
  "version": "3.1.0",
  "license": "MIT",
  "author": "Florens Verschelde",
  "repository": "https://github.com/fvsch/remarkdown",
  "keywords": [
    "css",
    "markdown"
  ],

  "scripts": {
    "build": "node src/build.js",
    "start": "serve docs"
  },
  "devDependencies": {
    "prettier": "^2.1.2",
    "sass": "^1.26.11",
    "serve": "^11.3.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false
        }
      },
      {
        "files": "*.css",
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
